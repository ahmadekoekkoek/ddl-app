# === PAYMENT GATEWAY CONFIGURATION ===

# Midtrans Payment Gateway (CURRENT - ACTIVE)
# Get your credentials from: https://dashboard.midtrans.com/settings/config_info
# Server Key formats:
#   - Sandbox: Starts with "SB-Mid-server-" (e.g., SB-Mid-server-xxxxx)
#   - Production: Starts with "Mid-server-" (e.g., Mid-server-xxxxx)
MIDTRANS_SERVER_KEY=SB-Mid-server-your_server_key_here
MIDTRANS_SANDBOX=true  # Set to 'false' for production

# --- DEPRECATED: Duitku Payment Gateway (kept for reference) ---
# Get your credentials from: https://passport.duitku.com/merchant/Project
# Merchant Code formats:
#   - Sandbox: Starts with "DS" (e.g., DS26064)
#   - Production: Starts with "D" only (e.g., D0010, D1234)
# DUITKU_MERCHANT_CODE=DXXXX
# DUITKU_API_KEY=your_api_key_here
# DUITKU_CALLBACK_URL=http://localhost/callback
# DUITKU_RETURN_URL=http://localhost/return

# --- DEPRECATED: Xendit Payment Gateway (kept for reference) ---
# Get your API key from: https://dashboard.xendit.co/settings/developers#api-keys
# Use test API key for sandbox mode (starts with xnd_development_)
# XENDIT_API_KEY=xnd_development_your_api_key_here

# === APPLICATION SECURITY ===

# Application Security Salt
SECRET_SALT="your_salt_here_32_chars_min"

# API Encryption Key (MANDATORY - must be set before running)
# This is the AES key you use to encrypt/decrypt API payloads
AES_BASE64_KEY="xxxxx"

# === WHATSAPP INTEGRATION ===
WHATSAPP_NUMBER=6281234567890

# === CLOUD ADMIN DASHBOARD ===

# Supabase Cloud Database (get from https://supabase.com)
SUPABASE_URL=https://xxxxx.supabase.co
SUPABASE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.xxxxx

# Admin Dashboard Credentials
ADMIN_USERNAME=admin
ADMIN_PASSWORD=your_secure_password_here
ADMIN_SECRET_KEY=random_32_char_string_for_session
